{
  "name": "donate-gifts-ts",
  "version": "1.0.0",
  "description": "Typescript backend for donate gifts",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --inspect=0.0.0.0:9229 -e ts -w src -r ts-node/register src/",
    "build": "tsc",
    "lint": "eslint --cache --ext .ts --ignore-path .eslintignore src/",
    "lint:fix": "eslint --cache --fix --ext .ts --ignore-path .eslintignore src/",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "prisma:generate": "npx prisma generate",
    "prisma:introspect": "npx prisma introspect",
    "prisma:migrate-dev": "npx prisma migrate dev --name ",
    "deploy:start": "npx prisma migrate deploy && node dist/index.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "chai": "^4.3.6",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unicorn": "^43.0.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "prisma": "^4.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@prisma/client": "^4.2.1",
    "body-parser": "^1.20.0",
    "celebrate": "^15.0.1",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "firebase-admin": "^11.0.1",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.3",
    "reflect-metadata": "^0.1.13"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{.ts}": "eslint"
  }
}
